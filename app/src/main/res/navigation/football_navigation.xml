<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/football_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.zeroemotion.footballleague.ui.league.HomeFragment"
        android:label="League"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/actionDetailLeague"
            app:destination="@id/detailLeagueFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailLeagueFragment"
        android:name="com.zeroemotion.footballleague.ui.detailleague.DetailLeagueFragment"
        android:label="League Detail"
        tools:layout="@layout/fragment_detail_league" >
        <argument
            android:name="leagueId"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/actionDetailMatch"
            app:destination="@id/detailMatchFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailMatchFragment"
        android:name="com.zeroemotion.footballleague.ui.detailmatch.DetailMatchFragment"
        android:label="Match Detail"
        tools:layout="@layout/fragment_detail_match" >
        <argument
            android:name="idMatch"
            app:argType="com.zeroemotion.footballleague.data.model.Match" />
    </fragment>
</navigation>